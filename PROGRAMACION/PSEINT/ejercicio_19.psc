Proceso ejercicio_19
	Definir ninos, ninas, porc_ninos, porc_ninas, total como reales;
	
	Escribir "Introduce el número de niños:";
	Leer ninos;
	
	Escribir "Introduce el número de niñas:";
	Leer ninas;
	
	total <- ninos + ninas;
	porc_ninos <- (ninos * 100) / total;
	porc_ninas <- (ninas * 100) / total;
	
	Escribir "El porcentaje de niños es:", porc_ninos, "%.";
	Escribir "El porcentaje de niñas es:", porc_ninas, "%.";
	
FinProceso
